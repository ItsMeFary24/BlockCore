{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "scripts",
    "removeComments": false,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "scripts"]
}
